<h2 class="pt-1 pb-2"> Lista de Productos </h2>
<div class="card">
    <div class="card-body">
        {{#if dataOk}}
        <table class="table table-hover table-dark table-sm ">
            <thead>
                <tr>
                    {{#each productosKeys}}
                    <th scope="col">{{this}}</th>
                    {{/each}}
                </tr>
            </thead>
            <tbody>
                {{#each productos}}
                <tr>
                    <th scope="row">{{this.title}}</th>
                    <td>{{this.price}}</td>
                    <td><img src={{this.thumbnail}} atl={{this.title}}></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{else}}
        <h5 class="card-title">{{wrongTitle}}</h5>
        <p class="card-text">{{wrongDescription}}</p>
        {{/if}}
        <a href={{buttonHref}} class="btn btn-success">{{buttonDescription}}</a>
    </div>
</div>

<style>
    .table tr {
        text-align: center;  
    }
    .table img {
        display: block;
        margin: auto;
        width: 40px;
        height: auto;
    }
</style>